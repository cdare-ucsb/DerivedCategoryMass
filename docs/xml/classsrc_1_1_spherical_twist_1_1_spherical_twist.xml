      <memberdef kind="function" id="classsrc_1_1_spherical_twist_1_1_spherical_twist_1a68f7b3d2761fa842f86e7e6405ce7fb4" prot="public" static="no" const="no" explicit="no" inline="no" virt="non-virtual">
